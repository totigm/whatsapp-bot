{
    "name": "@totigm/whatsapp-bot",
    "version": "1.1.0",
    "description": "This is a library to create whatsapp bots. It handles all the commands stuff behind the scenes, so you can focus on your bot's logic.",
    "main": "dist/index.js",
    "bin": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/*"
    ],
    "scripts": {
        "build": "tsc --skipLibCheck",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "prettier": "prettier --check src",
        "prettier:fix": "prettier --write src",
        "check": "npm run lint && npm run prettier",
        "check:fix": "npm run lint:fix && npm run prettier:fix",
        "prepublishOnly": "npm run check && npm run build"
    },
    "dependencies": {
        "@totigm/bot-builder": "^1.2.1",
        "qrcode-terminal": "^0.12.0",
        "tslib": "^2.5.0",
        "whatsapp-web.js": "^1.23.0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.8.7",
        "ts-node": "^10.0.0",
        "typescript": "^4.9.5"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/totigm/whatsapp-bot.git"
    },
    "keywords": [
        "typescript",
        "template"
    ],
    "author": "Toti Mu√±oz",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/totigm/whatsapp-bot/issues"
    },
    "homepage": "https://github.com/totigm/whatsapp-bot#readme"
}
